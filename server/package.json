{
  "name": "whispercache-server",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/lib/crypto.test.ts src/agent/agentPolicy.test.ts",
    "test:integration": "vitest run tests/",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "circomlibjs": "^0.1.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "libsodium-wrappers": "^0.7.15",
    "snarkjs": "^0.7.5",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/sql.js": "^1.4.9",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.14",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.14"
  }
}

{
  "info": {
    "name": "WhisperCache API",
    "description": "Privacy-preserving AI memory system with ZK proofs",
    "version": "0.1.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "key",
        "value": "x-user-id",
        "type": "string"
      },
      {
        "key": "value",
        "value": "{{userId}}",
        "type": "string"
      },
      {
        "key": "in",
        "value": "header",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000"
    },
    {
      "key": "userId",
      "value": "test-user"
    },
    {
      "key": "memoryId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "Memory",
      "item": [
        {
          "name": "Create Memory",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.memoryId) {",
                  "    pm.environment.set('memoryId', jsonData.memoryId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"memoryCommitment\": \"{{$randomHexadecimal}}{{$randomHexadecimal}}{{$randomHexadecimal}}{{$randomHexadecimal}}\",\n  \"tags\": [\"finance\", \"budget\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/memory",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memory"]
            }
          }
        },
        {
          "name": "List Memories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/memory",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memory"]
            }
          }
        },
        {
          "name": "Get Memory",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/memory/{{memoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memory", "{{memoryId}}"]
            }
          }
        },
        {
          "name": "Update Memory",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tags\": [\"updated\", \"tags\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/memory/{{memoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memory", "{{memoryId}}"]
            }
          }
        },
        {
          "name": "Delete Memory",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/memory/{{memoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memory", "{{memoryId}}"]
            }
          }
        },
        {
          "name": "Revoke Memory",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"User requested deletion\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/memory/{{memoryId}}/revoke",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memory", "{{memoryId}}", "revoke"]
            }
          }
        }
      ]
    },
    {
      "name": "ZK Proofs",
      "item": [
        {
          "name": "Get Prover Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/zk/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "zk", "status"]
            }
          }
        },
        {
          "name": "Generate Proof",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"memoryCommitment\": \"abcd1234567890abcd1234567890abcd1234567890abcd1234567890abcd1234\",\n  \"pattern\": \"0x[0-9a-f]+\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/zk/prove",
              "host": ["{{baseUrl}}"],
              "path": ["api", "zk", "prove"]
            }
          }
        },
        {
          "name": "Verify Proof",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"proofHash\": \"<proof-hash>\",\n  \"proof\": \"<proof-data>\",\n  \"publicSignals\": []\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/zk/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "zk", "verify"]
            }
          }
        },
        {
          "name": "List Proofs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/zk/proofs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "zk", "proofs"]
            }
          }
        }
      ]
    },
    {
      "name": "Keys",
      "item": [
        {
          "name": "Get Current Key",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/keys/current",
              "host": ["{{baseUrl}}"],
              "path": ["api", "keys", "current"]
            }
          }
        },
        {
          "name": "Rotate Key",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/keys/rotate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "keys", "rotate"]
            }
          }
        },
        {
          "name": "Key History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/keys/history",
              "host": ["{{baseUrl}}"],
              "path": ["api", "keys", "history"]
            }
          }
        }
      ]
    },
    {
      "name": "Agent",
      "item": [
        {
          "name": "Agent Query",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"memoryId\": \"{{memoryId}}\",\n  \"pattern\": {\n    \"isFinance\": true,\n    \"isHealth\": false,\n    \"isPersonal\": false\n  },\n  \"agentPrompt\": \"Help me plan my monthly savings.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/agent/query",
              "host": ["{{baseUrl}}"],
              "path": ["api", "agent", "query"]
            }
          }
        }
      ]
    },
    {
      "name": "Anchors",
      "item": [
        {
          "name": "Anchor Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/anchor/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "anchor", "status"]
            }
          }
        },
        {
          "name": "Create Anchor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"memoryId\": \"{{memoryId}}\",\n  \"chain\": \"midnight\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/anchor",
              "host": ["{{baseUrl}}"],
              "path": ["api", "anchor"]
            }
          }
        }
      ]
    },
    {
      "name": "Compliance",
      "item": [
        {
          "name": "Get Logs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/compliance/logs?limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "compliance", "logs"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
